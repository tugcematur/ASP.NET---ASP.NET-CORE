@model IEnumerable<FirstCode.Models.DTOs.PersonelDTO>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonelId" class="btn btn-success">Edit</a>
                <a asp-action="Details" asp-route-id="@item.PersonelId" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.PersonelId" class="btn btn-danger">Delete</a>


            </td>
        </tr>
}
    </tbody>
</table>
