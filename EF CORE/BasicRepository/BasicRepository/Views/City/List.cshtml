@model IEnumerable<BasicRepository.Models.Classes.City>

@{
    ViewData["Title"] = "List";                                      
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                City Id
            </th>
            <th>City Name</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CityId
                </td>
                <td>
                    @item.CityName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CityId" class="btn btn-success">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.CityId" class="btn btn-info">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.CityId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
