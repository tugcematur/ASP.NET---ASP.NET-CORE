@model AdvancedRepository.Models.ViewModels.CountiesModel

@{
    ViewData["Title"] = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crud</h1>

<h4>Counties</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>@Model.Header</h4>
            <hr />

            <div class="form-group" hidden>
                <input asp-for="Counties.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Counties.CountyName" class="control-label"></label>
                <input asp-for="Counties.CountyName" class="form-control" />
                <span asp-validation-for="Counties.CountyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>City Name</label>
                <select name="Counties.CityId" class="form-control">

                    @foreach (var item in Model.Cities)
                    {
                        @if (@item.Id == Model.Counties.CityId)
                        {
                            <option selected name="Counties.CityId" style="color:red" value="@item.Id"> @item.CityName</option>
                        }


                        else
                        {
                            <option name="Counties.CityId" value="@item.Id"> @item.CityName</option>
                        }
                    }
                </select>
            </div>
            @*<div class="form-group">
                    <label asp-for="CreateDate" class="control-label"></label>
                    <input asp-for="CreateDate" class="form-control" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastUpdated" class="control-label"></label>
                    <input asp-for="LastUpdated" class="form-control" />
                    <span asp-validation-for="LastUpdated" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WhoUpdated" class="control-label"></label>
                    <input asp-for="WhoUpdated" class="form-control" />
                    <span asp-validation-for="WhoUpdated" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="@Model.BtnVal" class="@Model.BtnClass" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
