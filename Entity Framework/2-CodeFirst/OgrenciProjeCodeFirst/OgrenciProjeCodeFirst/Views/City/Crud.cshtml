@model OgrenciProjeCodeFirst.Models.ViewModels.CityModel
@{
    ViewBag.Title = "Crud";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-7">
        <h2>@Model.Baslik</h2>

        <form method="post">

            <div class="form-group">
                <label>City Id</label>
                <input type="@Model.InputType" value="@Model.City.CityId" name="City.CityId" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label> City Name</label>
                <input type="text" value="@Model.City.CityName" name="City.CityName" class="form-control" />
            </div>

            

            <input type="submit" class="@Model.BtnClass" value="@Model.BtnVal" />
            <a href="/City/List" class="btn btn-danger">İptal</a>

        </form>

    </div>
</div>

